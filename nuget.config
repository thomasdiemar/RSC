<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <add key="SpaceEngineers" value="https://diemar.pkgs.visualstudio.com/06ec9d7b-fe8e-4f72-a28e-3edb09ab1b81/_packaging/SpaceEngineers/nuget/v3/index.json" />
  </packageSources>

  <config>
    <add key="enablePackageSourceMapping" value="true" />
  </config>

  <packageSourceCredentials>
    <SpaceEngineers>
      <add key="Username" value="diemar" />
      <add key="ClearTextPassword" value="%AZURE_DEVOPS_NUGET_TOKEN%" />
    </SpaceEngineers>
  </packageSourceCredentials>

  <!-- 
    Azure DevOps feed authentication
    
    For local development:
    - Create .env file with: AZURE_DEVOPS_NUGET_TOKEN=YOUR_PAT
    - Scripts (build.ps1, test.ps1) automatically load .env into environment
    
    For CI/CD (GitHub Actions):
    - Set AZURE_DEVOPS_NUGET_TOKEN secret in GitHub repository
    - Workflow passes it as environment variable
    - dotnet CLI respects NuGet environment credentials through credentials provider
    
    The ClearTextPassword value %AZURE_DEVOPS_NUGET_TOKEN% is expanded by NuGet runtime.
  -->
</configuration>
